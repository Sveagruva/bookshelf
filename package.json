{
  "name": "bookshelf",
  "version": "0.1.0b",
  "description": "Organizes a library from your books",
  "main": "js/app.js",
  "compression": "maximum",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist_win": "electron-builder",
    "dist": "electron-builder --linux"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sveagruva/bookshelf"
  },
  "build": {
    "appId": "sveagruva/bookshelf",
    "extraResources": [
      {
        "from": "resources",
        "to": ""
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap"
      ],
      "category": "Office"
    },
    "mac": {
      "category": "public.app-category.entertainment"
    }
  },
  "author": { 
    "name" : "Sveagruva",
    "email" : "sveagruva@sveagruva.site",
    "url" : "https://github.sveagruva.site/"
  },
  "mimeTypes" : ["application/epub+zip"],
  "license": "cc-by-nc-4.0",
  "devDependencies": {
    "electron": "^9.3.1",
    "electron-builder": "^22.7.0"
  },
  "dependencies": {
    "electron-localshortcut": "^3.2.1",
    "hidefile": "^3.0.0",
    "jszip": "3.5.0",
    "xml-js": "1.6.11"
  }
}